define verify_directory
    if [ -z "$($@)" ]; then \
        echo "ERROR: $@ must be set"; \
        exit -1; \
    else \
        if [ ! -d "$($@)" ]; then \
            echo "ERROR: $@ ($($@)) does not point to a valid directory"; \
            exit -1; \
        fi \
    fi
endef

