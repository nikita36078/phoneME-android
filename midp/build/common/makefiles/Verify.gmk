tmplogfile = /tmp/tmplogfile.$$
display:
	@echo   "" $(LOG)
	@echo   "========================" $(LOG)
	@echo   "MIDP Build Configuration" $(LOG)
	@echo   "========================" $(LOG)
	@echo   "" $(LOG)
	@echo   "VAR_IMPORT_FROM       = ""$(VAR_IMPORT_FROM)" $(LOG)
	@echo   "" $(LOG)
	@$(shell rm -f $(tmplogfile))
